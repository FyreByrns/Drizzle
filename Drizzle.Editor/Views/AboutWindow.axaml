<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Drizzle.Editor.Views.AboutWindow"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterOwner"
        Width="400" Height="210"
        Title="About">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="16" />
        </Style>
    </Window.Styles>
    
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="25" FontWeight="Bold" Text="Drizzle Editor" HorizontalAlignment="Center" Margin="0 10 0 20" />
        <Grid Name="InfoGrid" ColumnDefinitions="120,*" HorizontalAlignment="Center" />
    </StackPanel>
    
</Window>