<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="clr-namespace:Drizzle.Editor.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Drizzle.Editor.Views.LingoStatus">
    <Design.DataContext>
        <vm:LingoViewModel/>
    </Design.DataContext>
    
    <DockPanel Margin="4" LastChildFill="False">
        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Text="{Binding LastFrame,StringFormat=Current frame: {0}}" />
        <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="8 0" Text="{Binding LastFrameName,StringFormat=Behavior: {0}}" />
        
        <Button DockPanel.Dock="Right" Content="Cast Viewer" Command="{Binding OpenCastViewer}" />
        <Button DockPanel.Dock="Right" Margin="8 0" Content="Step" Command="{Binding SingleStep}" />
        <CheckBox DockPanel.Dock="Right" VerticalAlignment="Center" Margin="8 0" IsChecked="{Binding IsPaused}" Content="Paused" />
    </DockPanel>
</UserControl>